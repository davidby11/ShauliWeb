@model IEnumerable<ShauliWeb.Models.Comment>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CommentTitle)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.WriterName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.URL)
                </th>
